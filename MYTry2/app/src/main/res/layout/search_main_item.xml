<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageViewsearch"
            android:layout_width="250dp"
            android:layout_height="250dp"
            app:srcCompat="@drawable/certification_icon_egg" />

        <ImageButton
            android:id="@+id/imageButtonstar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/main_like_btn1"
            android:foregroundGravity="top|right" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E8E8E8"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/challenge_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/handon600g"
            android:text="챌린지명"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/challenge_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/handon300g"
            android:text="인증빈도 | 기간" />

        <TextView
            android:id="@+id/challenge_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/handon300g"
            android:text="마감일자" />
    </LinearLayout>

</LinearLayout>